<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">

	<!-- 쿼리문 작성 -->

	<!-- 전체리스트 가져오기 -->
	<select id="selectList" resultType="com.javaex.vo.BoardVo">
	    <![CDATA[
	        SELECT  b.no no,
			        b.title title,
			        u.name name,
			        b.hit hit,
			        b.reg_date regDate,
			        b.user_no userNo
			FROM  board b, users u
			where b.user_no = u.no
			order by no asc
	    ]]>
	</select>

	<!-- 한사람 리스트 가져오기 -->
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.BoardVo">
		<![CDATA[
			SELECT  u.name name,
			        b.hit hit,
			        b.reg_date regDate,
			        b.title title,
			        b.content content
			FROM board b, users u
			where b.user_no = u.no
			and b.no = #{no}
		]]>
	</select>
	
	<!-- 작성하기 -->	
	<select id="insert" parameterType="com.javaex.vo.BoardVo">
		<![CDATA[
			insert into board
			values(seq_board_no.nextval, #{title}, #{content}, 0, sysdate, #{userNo})
		]]>
	</select>

	<!-- 수정 -->
	<select id="update" parameterType="com.javaex.vo.BoardVo" resultType="com.javaex.vo.BoardVo">
		<![CDATA[
			update board
			set title = #{title},
			    content = #{content} 
			where no = #{no}
		]]>
	</select>

	<select id="delete" parameterType="int">
		<![CDATA[
			delete from board
			where no =#{no}
		
		]]>	
	</select>


</mapper>